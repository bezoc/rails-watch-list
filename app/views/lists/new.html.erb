<h1>Create a New List</h1>

<%= simple_form_for @list do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "List Name", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :photo, as: :file, label: "Upload Image", input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Create List", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
