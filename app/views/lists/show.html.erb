<h1><%= @list.name %></h1>

<h2>Movies in this List</h2>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "img-thumbnail", size: "150x220" %>
      <strong><%= bookmark.movie.title %></strong> (<%= bookmark.movie.rating %> â˜…)
      <p><%= bookmark.comment %></p>
      <%= link_to "Remove", bookmark_path(bookmark), class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete,
                                                                                                     turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
