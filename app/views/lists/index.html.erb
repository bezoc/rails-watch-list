<h1>My Lists</h1>

 <div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <% if list.photo.attached? %>
          <%= image_tag list.photo.variant(resize_to_fill: [300, 200]), class: "card-img-top" %>
        <% else %>
          <%= image_tag "placeholder.png", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
          <%= link_to "Delete", list_path(list), class: "btn btn-outline-danger btn-sm",
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
