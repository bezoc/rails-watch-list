<h1>My Lists</h1>

 <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>

<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list_path(list), class: "btn btn-link" %>
      <%= link_to "Delete", list_path(list), class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete,
                                                                                     turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
