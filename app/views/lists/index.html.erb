<h1>My Lists</h1>

<%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, class: "card-img-top", height: 200, crop: :fill %>
        <% else %>
          <%= image_tag "placeholder.png", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
          <%= link_to "Delete", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

