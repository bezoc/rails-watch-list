<h1>Add a Movie to <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Select a Movie" }, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :comment, as: :text, label: "Comment", input_html: { rows: 4, class: "form-control" } %>
  </div>
  <div>
    <%= f.button :submit, "Add Movie", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>

